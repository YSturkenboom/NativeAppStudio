<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yuri.yuristurkenboom_pset2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeInputActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ThinkingStoryActivity"
            android:parentActivityName="com.example.yuri.yuristurkenboom_pset2.HomeInputActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yuri.yuristurkenboom_pset2.HomeInputActivity" />
        </activity>

        <activity android:name=".StoryShowActivity"
            android:parentActivityName="com.example.yuri.yuristurkenboom_pset2.HomeInputActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yuri.yuristurkenboom_pset2.HomeInputActivity" />
        </activity>
    </application>

</manifest>