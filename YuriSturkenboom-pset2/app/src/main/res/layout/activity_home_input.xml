<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuri.yuristurkenboom_pset2.HomeInputActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/info_short"
        android:gravity="fill"
        android:textSize="18sp"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/requiredWord"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textAlignment="center"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="\?"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <EditText
            android:id="@+id/textField"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="10"
            />

        <Button
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="OK"
            android:onClick="enterText"/>

    </LinearLayout>

    <TextView
        android:id="@+id/wordsLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/wordsSoFar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="typed words go here"
        android:padding="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surprise Me"
        android:onClick="selectRandomStory"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple"
        android:onClick="selectStory0"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarzan"
        android:onClick="selectStory1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University"
        android:onClick="selectStory2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clothes"
        android:onClick="selectStory3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dance"
        android:onClick="selectStory4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Go!"
            android:layout_gravity="center_horizontal|center"
            android:onClick="goToThinkingStoryActivity"/>

    </LinearLayout>

</LinearLayout>
